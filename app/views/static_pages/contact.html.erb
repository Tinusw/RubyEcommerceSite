<div class="jumbotron text-center">
  <h1>Contact Me</h1>
</div>

<%= form_tag(static_pages_thanks_path) do %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>

    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div>
    <div class="container text-center">
      <%= submit_tag "Send", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>

