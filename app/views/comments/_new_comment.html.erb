<% if user_signed_in? %>
<div class='container new-comments'>
  <%= form_for([@product, @product.comments.build]) do |f| %>
  <div class="container text-center">
      <h4> Add a review: </h4>
  </div>
  <div class="container text-center">
    <p>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating"></div>
    </p>
    <div class="container text-center">
      <%= f.submit "Submit", class: "btn btn-secondary" %>
    </div>
  </div>
  <% end %>
</div>
<% end %>