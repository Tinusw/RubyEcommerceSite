<div class="container product-reviews">
  <% @comments.each do |comment| %>
    <div class="row">
      <hr>
      <p>
        <%= comment.user.first_name %>
      </p>
      <p><small>
        <%= "#{time_ago_in_words(comment.created_at)} ago" %>
      </small></p>
      <p>
        <div class="rated" data-score="<%=comment.rating%>"></div>
      </p>
      <p>
        <%= comment.body %>
      </p>
    </div>
  <% end %>
</div>