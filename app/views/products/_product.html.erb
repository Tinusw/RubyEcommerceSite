<div class="container-fluid col-lg-2 product">
  <div id="product-wrapper">
    <%= link_to (image_tag(product.image_url)) , product, class: "img-reponsive img-hover" %>
      <div class="container text-center product-info">
        <h3> 
          <%= product.name %> 
        </h3>
        <h5>
          <strong>$ <%= product.price %> </strong>
        </h5>
        <div class="product-options">
          <span><%= link_to 'Edit', edit_product_path(product) %></span> |
          <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </div>
  </div>
</div>
